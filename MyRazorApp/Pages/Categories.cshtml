@page "~/categorias/{skip?}/{take?}"
@model MyRazorApp.Pages.CategoriesModel
@{
    ViewData["Title"] = "Categorias";
}
<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
    <div>
        <h1>Categorias</h1>
        <table>
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Title</td>
                    <td>Price</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.CategoryList)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Title</td>
                        <td>@category.Price.ToString(format:"C")</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</body>
</html> 